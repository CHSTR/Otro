            <h4>Eventos</h4>
          </a>
        </div>
        <%= form_tag noticias_inicio_path,:class =>'margen' ,:method => :get do %>

            <%= text_field_tag :search %>

            <%= submit_tag "Buscar", :class => 'btn btn-outline-success margen1'%>

        <% end %>
      </div>
      <!-- HASTA ACA -->
    </div>
    <div class=" col-sm-12 col-md-9 margen">
      <div class="container margen text-justify" style="font-family: 'Junge', serif; font-size:18px;">
        <% if can? :manage, NoticiaEscuela %>
        <%= form_for(@noticia_escuelas, html: { multipart: true }, :url => {:action => :noticiacreate}) do |f| %>
            <% if @noticia_escuelas.errors.any? %>
                <div class="margen alert alert-danger alert-dismissible fade show" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <% @noticia_escuelas.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </div>
            <%end%>
            <div class="col-md-9 margen">
              <h3 class="text-left">
                <%= f.label :Nombre %>
                <%= f.text_field :nombre %>
              </h3>
              <br>
              <h3 class="text-left">
                <%= f.label :Cuerpo %>
                <%= f.cktext_area :cuerpo %>
              </h3>
              <br>
              <h3 class="text-left">
                <%= f.label :Imagen_Portada%>
                <%= f.file_field :photo %>
              </h3>
              <br>
              <h3 class="text-left">
                <%= f.label :Descripcion %>
                <%= f.text_field :descripcion %>
              </h3>
              <br>
              <div class="actions">
                <%= f.submit 'Guardar', :class => 'btn btn-outline-success margen1' %>
              </div>
        <% end %>
            <% else %>
            <br>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <strong>No puede ver este contenido!</strong> debe iniciar sesion.
            </div>
            <br>
            <% end %>
        <br>
        <%= link_to 'Volver', noticias_inicio_path, :class => 'btn btn-outline-primary margen1' %>
        <br>
        </div>

      </div>
